<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MA01_20200989" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="android:textViewStyle">@style/basicFontTextView</item>
        <item name="android:buttonStyle">@style/basicFontButton</item>
    </style>

    <style name="basicFontTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/gmarketsansttfmedium</item>
    </style>

    <style name="basicFontButton" parent="android:Widget.Button">
        <item name="android:fontFamily">@font/gmarketsansttfmedium</item>
    </style>
</resources>